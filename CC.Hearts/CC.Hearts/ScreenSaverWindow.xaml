<Window x:Class="CC.Hearts.ScreenSaverWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:CC.Hearts.Controls" Title="CC.Hearts Screen Saver" Height="600" Width="600" Background="Black" WindowStyle="None" WindowStartupLocation="Manual" Visibility="Visible" ShowInTaskbar="False" ShowActivated="True" WindowState="Normal" ResizeMode="NoResize" Topmost="True">
    <Grid Name="_GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Name="_RowMain" Height="*" ></RowDefinition>
            <RowDefinition Name="_RowDebug" Height="0" ></RowDefinition>
        </Grid.RowDefinitions>
        
        <Controls:HeartsCanvas x:Name="_HeartsVisualHost" Grid.Row="0"></Controls:HeartsCanvas>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="75"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Name="_TextBlockFramesPerSecond" Opacity="0.8" Text="FPS: 0" Grid.Column="0" />
            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Name="_TextBlockHeartCount" Opacity="0.8" Text="(0/30)" Grid.Column="1" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</Window>
