<Window x:Class="CC.Hearts.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Hearts Screensaver" Height="600" Width="600" Background="Black" WindowStyle="None" WindowStartupLocation="Manual" Visibility="Visible" ShowInTaskbar="False" ShowActivated="True" WindowState="Normal" ResizeMode="NoResize" Topmost="True">
    <Grid Name="_GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Name="_RowMain" Height="*" ></RowDefinition>
            <RowDefinition Name="_RowDebug" Height="0" ></RowDefinition>
        </Grid.RowDefinitions>
        
        <Canvas Name="_CanvasMain" Height="auto" Width="auto" Grid.Row="0">
        
        </Canvas>
        
        <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Name="_TextBlockFramesPerSecond" Opacity="0.8" Text="FPS: 0" Grid.Row="1" />
    </Grid>
</Window>
